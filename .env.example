# Training Configuration
# Copy this file to .env and adjust values as needed

# Model Architecture
MODEL_NAME=efficientnet-b0
NUM_CLASSES=7
IMAGE_SIZE=256

# Training Hyperparameters
LEARNING_RATE=0.001
BATCH_SIZE=32
NUM_EPOCHS=22
DROPOUT_RATE=0.4

# Optimizer Settings
OPTIMIZER=adamw
WEIGHT_DECAY=0.01

# Learning Rate Scheduler
LR_STEP_SIZE=7
LR_GAMMA=0.1

# Data Augmentation
RANDOM_ROTATION=10
HORIZONTAL_FLIP_PROB=0.5

# Data Paths
DATA_DIR=../images/
MODEL_SAVE_PATH=./efficientnet_b0_adamw_256x256.pt

# Hardware
NUM_WORKERS=10
